{
  "name": "vite-vue3-ts-template",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "check-css": "npx stylelint \"src/**/*.{scss,css,vue}\"",
    "format-css": "npx stylelint \"src/**/*.{scss,css,vue}\" --fix",
    "lint-check": "npx eslint src --ext .js,.ts,tsx",
    "lint-fix": "npx eslint src --ext .js,.ts,tsx --fix"
  },
  "dependencies": {
    "dayjs": "^1.10.7",
    "vue": "^3.2.25",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "@vitejs/plugin-vue": "^2.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "postcss": "^8.4.12",
    "postcss-html": "^1.3.1",
    "postcss-scss": "^4.0.1",
    "sass": "^1.45.1",
    "stylelint": "^14.0.0",
    "stylelint-config-recommended-vue": "^1.0.0",
    "stylelint-config-standard-scss": "^2.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "vite": "^2.7.2",
    "vue-tsc": "^0.29.8"
  }
