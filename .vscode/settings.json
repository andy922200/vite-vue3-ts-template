{
  "editor.tabSize": 4,
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],
  "vetur.validation.template": false,
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "stylelint.snippet": [
    "css",
    "scss",
    "postcss",
    "vue"
  ],
  "stylelint.validate": [
    "css",
    "scss",
    "postcss",
    "vue"
  ],
  "cSpell.words": [
    "pinia"
  ]
}